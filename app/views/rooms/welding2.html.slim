.starter-template
  h1 Brunsfield Center - Welding 2
  -if @current_user
    = link_to "New Booking", new_booking_path(:location => "welding2"), class: "btn btn-blue"


  .calendar_welding2

javascript:
  var initialize_calendar;
  initialize_calendar = function() {
    $('.calendar_welding2').fullCalendar({
        defaultView: 'agendaWeek',
        events: '/rooms/welding2.json',
        height: 'auto',
        minTime: '8:00:00',
        maxTime: '17:00:00',
        slotDuration: '00:30:00',
        allDaySlot: false,
        selectable: false,
        selectHelper: true,
        eventLimit: true,
        hiddenDays: [0],
        firstDay: 1,
        header: {
          left: 'prev,next today',
          center: 'title',
          right: 'agendaDay,agendaWeek,month'
        },

      });
  };
    $(document).on('turbolinks:load', initialize_calendar);
