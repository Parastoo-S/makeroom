.starter-template
  h1 Makerspace
  -if @current_user
    = link_to "New Booking", new_booking_path(:location => "makerspace"), class: "btn btn-blue"
  .calendar_makerspace

javascript:
  setTimeout("jQuery('.calendar_makerspace').fullCalendar( 'render' );",100);
  var initialize_calendar;
    initialize_calendar = function() {
      $('.calendar_makerspace').fullCalendar({
          defaultView: 'agendaWeek',
          events: '/rooms/makerspace.json',
          height: '100',
          minTime: '08:00:00',
          maxTime: '22:00:00',
          slotDuration: '00:15:00',
          allDaySlot: false,
          selectable: false,
          selectHelper: true,
          eventLimit: true,
        });
    };
    $(document).on('turbolinks:load', initialize_calendar);
