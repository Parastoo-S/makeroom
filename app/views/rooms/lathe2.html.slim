.starter-template
  h1 Brunsfield Center - Lathe 2
  -if @current_user
    = link_to "New Booking", new_booking_path(:location => "lathe2"), class: "btn btn-blue"
    br
    br
    br


  .calendar_lathe2

javascript:
  var initialize_calendar;
    initialize_calendar = function() {
      $('.calendar_lathe2').fullCalendar({
          defaultView: 'agendaWeek',
          events: '/rooms/lathe2.json',
          height: 'auto',
          minTime: '12:00:00',
          maxTime: '19:00:00',
          slotDuration: '00:30:00',
          allDaySlot: false,
          selectable: false,
          selectHelper: true,
          eventLimit: true,
          hiddenDays: [0],
          firstDay: 1,
          nowIndicator: true,
          eventRender: function(event, element)
          {
              element.find('.fc-title').append("<br/>" + event.name + "<br/>" + event.username);
          },

          header: {
            left: 'prev,next today',
            center: 'title',
            right: 'agendaDay,agendaWeek,month'
          },

        });
    };
    $(document).on('turbolinks:load', initialize_calendar);
